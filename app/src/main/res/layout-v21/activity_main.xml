<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/main_grid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_10"
            android:rowCount="3">

            <LinearLayout
                android:id="@+id/btn_download"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_main_button"
                android:elevation="@dimen/dp_2"
                android:orientation="vertical"
                android:padding="@dimen/dp_5">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@drawable/download" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="下载离线数据"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_general"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_main_button"
                android:elevation="@dimen/dp_2"
                android:orientation="vertical"
                android:padding="@dimen/dp_5">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@drawable/exp_land" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="试验田列表"
                    android:textColor="@color/colorGrey"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_mutlilevel"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_main_button"
                android:elevation="@dimen/dp_2"
                android:orientation="vertical"
                android:padding="@dimen/dp_5">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@drawable/multilevel_list" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="试验田目录树"
                    android:textColor="@color/colorOrange"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_data"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_main_button"
                android:elevation="@dimen/dp_2"
                android:orientation="vertical"
                android:padding="@dimen/dp_5">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@drawable/search_input" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="精准搜索品种"
                    android:textColor="@color/colorPink"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/update_location_data"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_main_button"
                android:elevation="@dimen/dp_2"
                android:orientation="vertical"
                android:padding="@dimen/dp_5">

                <ImageView
                    android:id="@+id/update_location_data_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@drawable/upload_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="上传品种位置规划数据"
                    android:textColor="@color/colorBlue"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/update_pick_data"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_main_button"
                android:elevation="@dimen/dp_2"
                android:orientation="vertical"
                android:padding="@dimen/dp_5">

                <ImageView
                    android:id="@+id/update_pick_data_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@drawable/upload_green" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:text="上传品种采集数据"
                    android:textColor="@color/colorGreen"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </GridLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/view_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:background="@color/white"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progress_horizontal"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_100"
                android:padding="@dimen/dp_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_table_info"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/progress_circular"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tooltipText="下载离线数据..."
                    android:layout_marginEnd="@dimen/dp_5"/>

                <TextView
                    android:id="@+id/progress_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载离线数据..."
                    android:textColor="@color/primary_text"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
</LinearLayout>
