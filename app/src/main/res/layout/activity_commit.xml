<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundColor"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backGroundColor"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ColorWhite"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Pre_Load"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/backGroundColor">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/bg_item_bar_basic_info"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="40dip"
                        android:layout_weight="1.0"
                        android:gravity="center|left"
                        android:text="@string/item_bar_basic"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/ColorWhite"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|right"
                        android:src="@drawable/item_pressed" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:background="@color/backGroundColor" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/bg_item_bar_height"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="40dip"
                        android:layout_weight="1.0"
                        android:gravity="center|left"
                        android:text="@string/item_bar_height"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/ColorWhite"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|right"
                        android:src="@drawable/item_pressed" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:background="@color/backGroundColor" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/bg_item_bar_branch"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="40dip"
                        android:layout_weight="1.0"
                        android:gravity="center|left"
                        android:text="@string/item_bar_branch"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/ColorWhite"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|right"
                        android:src="@drawable/item_pressed" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:background="@color/backGroundColor" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/bg_item_bar_big"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="40dip"
                        android:layout_weight="1.0"
                        android:gravity="center|left"
                        android:text="@string/item_bar_big"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/ColorWhite"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|right"
                        android:src="@drawable/item_pressed" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:background="@color/backGroundColor" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/bg_item_bar_small"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="40dip"
                        android:layout_weight="1.0"
                        android:gravity="center|left"
                        android:text="@string/item_bar_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/ColorWhite"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|right"
                        android:src="@drawable/item_pressed" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:background="@color/backGroundColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mianliner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/backGroundColor"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
