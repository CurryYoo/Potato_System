<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <RelativeLayout
        android:id="@+id/farm_planA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_swipe">

        <RelativeLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_30_light_top">

            <LinearLayout
                android:id="@+id/edit_planA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/zoom_in_controls"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/selector_trans_button"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/edit_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zoom_out_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/border_farm"
                android:layout_alignTop="@id/zoom_in_controls"
                android:background="@drawable/selector_trans_button">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/zoom_out" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zoom_in_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/zoom_out_controls"
                android:background="@drawable/selector_trans_button">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/zoom_in" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/border_farm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/h_scroll"
                android:layout_below="@id/zoom_in_controls"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toStartOf="@id/v_scroll"
                android:background="@drawable/bg_farm"
                android:gravity="center"
                android:padding="1dp">

                <RelativeLayout
                    android:id="@+id/base_farm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/main_farm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/out_farm"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:background="@drawable/bg_farm" />

                        <RelativeLayout
                            android:id="@+id/in_farm"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:background="@drawable/bg_farm" />
                    </LinearLayout>

                    <View
                        android:id="@+id/cover_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/h_scroll"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_alignStart="@id/border_farm"
                android:layout_alignEnd="@id/border_farm"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/bg_touch"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/v_scroll"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_alignTop="@id/border_farm"
                android:layout_alignBottom="@id/border_farm"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_touch"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/farm_planB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <com.viewpagerindicator.TabPageIndicator
            android:id="@+id/plan_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/StyledIndicators" />

        <android.support.v4.view.ViewPager
            android:id="@+id/plan_viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>