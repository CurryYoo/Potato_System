<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />
    <!--    <Button
            android:id="@+id/commit_data"
            android:textAllCaps="false"
            android:text="Commit Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->

    <!--<WebView-->
    <!--android:id="@+id/web_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"></WebView>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <GridLayout
        android:id="@+id/main_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:columnCount="2"
        android:paddingStart="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10"
        android:rowCount="2">

        <LinearLayout
            android:id="@+id/btn_download"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_main_button"
            android:elevation="@dimen/dp_5"
            android:orientation="vertical"
            android:padding="@dimen/dp_5">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/download" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:text="下载离线数据"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_general"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@drawable/bg_main_button"
            android:elevation="@dimen/dp_5"
            android:orientation="vertical"
            android:padding="@dimen/dp_5">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/exp_land" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:text="实验田"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_mutlilevel"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/bg_main_button"
            android:elevation="@dimen/dp_5"
            android:orientation="vertical"
            android:padding="@dimen/dp_5">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/multilevel_list" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:text="实验田列表"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_data"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@drawable/bg_main_button"
            android:elevation="@dimen/dp_5"
            android:orientation="vertical"
            android:padding="@dimen/dp_5">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/upload" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:text="录入数据"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </GridLayout>

    <TextView
        android:id="@+id/view_download"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.75"
        android:background="@color/bg_grey"
        android:gravity="center"
        android:text="下载离线数据..."
        android:textColor="@color/primary_text"
        android:textSize="30sp"
        android:textStyle="bold"
        android:enabled="false"
        android:visibility="gone"/>
</RelativeLayout>
</LinearLayout>
