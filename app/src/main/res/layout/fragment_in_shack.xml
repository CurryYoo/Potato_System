<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/bg_in_shack">

        <LinearLayout
            android:id="@+id/save_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/in_shack_firm"
            android:layout_alignTop="@id/in_shack_firm"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_10_button"
            android:elevation="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/in_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/in_shack_firm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/backGroundColor" />

        <View
            android:id="@+id/cover_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"/>
    </RelativeLayout>
</LinearLayout>