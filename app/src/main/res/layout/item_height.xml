<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ten_plant_height1"
                android:hint="1"
                style="@style/style_item_edittext" />

            <View
                style="@style/view_divider_style"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />


            <EditText
                android:id="@+id/ten_plant_height3"
                android:hint="3"
                style="@style/style_item_edittext" />

            <View
                style="@style/view_divider_style"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />


            <EditText
                android:id="@+id/ten_plant_height5"
                android:hint="5"
                style="@style/style_item_edittext" />

            <View
                style="@style/view_divider_style"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />


            <EditText
                android:id="@+id/ten_plant_height7"
                android:hint="7"
                style="@style/style_item_edittext"/>

            <View
                style="@style/view_divider_style"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />


            <EditText
                android:id="@+id/ten_plant_height9"
                android:hint="9"
                style="@style/style_item_edittext"/>

            <View
                style="@style/view_divider_style"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <EditText
                android:id="@+id/ten_plant_height2"
                android:hint="2"
                style="@style/style_item_edittext" />

            <View
                style="@style/view_divider_style"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />


            <EditText
                android:id="@+id/ten_plant_height4"
                android:hint="4"
                style="@style/style_item_edittext" />

            <View
                style="@style/view_divider_style"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />


            <EditText
                android:id="@+id/ten_plant_height6"
                android:hint="6"
                style="@style/style_item_edittext"/>

            <View
                style="@style/view_divider_style"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />


            <EditText
                android:id="@+id/ten_plant_height8"
                android:hint="8"
                style="@style/style_item_edittext" />

            <View
                style="@style/view_divider_style"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />


            <EditText
                android:id="@+id/ten_plant_height10"
                android:hint="10"
                style="@style/style_item_edittext"/>

            <View
                style="@style/view_divider_style"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/bg_30_black"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="@dimen/dp_5"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_3"
                android:gravity="center_vertical"
                android:text="@string/average_height"
                android:textColor="@color/primary_text_light"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/average_plant_height"
                android:layout_width="wrap_content"
                style="@style/style_item_basicinfo_edittext"
                android:layout_marginStart="@dimen/dp_5"
                android:focusable="false"
                android:inputType="number"
                android:textColor="@color/color_red"/>

        </LinearLayout>

        <View
            style="@style/divider_color"
            android:layout_width="0.01dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10" />

        <Button
            android:id="@+id/btn_compute_average_plant_height"
            android:layout_weight="1"
            style="@style/save_data_activity_calculate"
            android:text="@string/calculate" />
    </LinearLayout>

</LinearLayout>
