<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/bg_out_shack">

        <LinearLayout
            android:id="@+id/save_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/out_shack_firm"
            android:layout_alignTop="@id/out_shack_firm"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/selector_10_button"
            android:elevation="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/out_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/out_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:text="@string/edit"
                android:textColor="@color/colorGreen"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/out_shack_firm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/backGroundColor" />

        <View
            android:id="@+id/cover_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"/>

    </RelativeLayout>
</LinearLayout>