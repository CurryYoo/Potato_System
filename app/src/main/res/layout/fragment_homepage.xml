<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_swipe"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_30_light_top">

        <LinearLayout
            android:id="@+id/create_new_farm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/zoom_in_controls"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/selector_trans_button"
            android:orientation="horizontal"
            android:tooltipText="创建新年份">

            <ImageView
                android:id="@+id/out_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/add" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zoom_out_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/border_farm"
            android:layout_alignTop="@id/zoom_in_controls"
            android:background="@drawable/selector_trans_button">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/zoom_out" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zoom_in_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/zoom_out_controls"
            android:background="@drawable/selector_trans_button">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/zoom_in" />
        </LinearLayout>

        <TextView
            android:id="@+id/direction"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@id/border_farm"
            android:layout_toEndOf="@id/zoom_in_controls"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="北"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/border_farm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/h_scroll"
            android:layout_below="@id/zoom_in_controls"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@id/v_scroll"
            android:background="@drawable/bg_farm"
            android:gravity="center"
            android:padding="1dp">

            <LinearLayout
                android:id="@+id/base_farm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/main_farm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/out_farm"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:background="@drawable/bg_farm" />

                    <RelativeLayout
                        android:id="@+id/in_farm"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:background="@drawable/bg_farm" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/h_scroll"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_above="@id/main_btn_layout"
            android:layout_alignStart="@id/main_btn_layout"
            android:layout_alignEnd="@id/main_btn_layout"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@drawable/bg_touch"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/v_scroll"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_alignTop="@id/border_farm"
            android:layout_alignBottom="@id/border_farm"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_touch"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/main_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_30_black">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/year" />

                <Spinner
                    android:id="@+id/homepage_years"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_35"
                    android:layout_marginStart="@dimen/dp_5"
                    android:background="@drawable/selector_trans_button_dark"
                    android:orientation="horizontal"
                    android:scrollbars="none" />
            </LinearLayout>


            <View
                style="@style/divider_color_dark"
                android:layout_width="0.1dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:id="@+id/btn_download"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_trans_button_dark"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:autoSizeMaxTextSize="14sp"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeStepGranularity="1sp"
                    android:autoSizeTextType="uniform"
                    android:text="下载"
                    android:textColor="@color/color_red"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                style="@style/divider_color_dark"
                android:layout_width="0.1dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical" />


            <LinearLayout
                android:id="@+id/btn_upload"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_trans_button_dark"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <ImageView
                    android:id="@+id/upload_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/upload" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:autoSizeMaxTextSize="14sp"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeStepGranularity="1sp"
                    android:autoSizeTextType="uniform"
                    android:text="上传"
                    android:textColor="@color/color_blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                style="@style/divider_color_dark"
                android:layout_width="0.1dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:id="@+id/plan_farm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_trans_button_dark"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/farm_plan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:autoSizeMaxTextSize="14sp"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeStepGranularity="1sp"
                    android:autoSizeTextType="uniform"
                    android:text="规划"
                    android:textColor="@color/color_green"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--            <View-->
