            <!--                android:padding="@dimen/dp_5">-->

            <!--                <ImageView-->
            <!--                    android:id="@+id/farm_type_icon"-->
            <!--                    android:layout_width="20dp"-->
            <!--                    android:layout_height="20dp" />-->

