<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/bg_main"
        android:columnCount="9"
        android:elevation="@dimen/dp_2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/year" />

            <Spinner
                android:id="@+id/homepage_years"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/selector_10_button"
                android:orientation="horizontal"
                android:scrollbars="none" />
        </LinearLayout>


        <View
            style="@style/divider_color"
            android:layout_width="0.1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/btn_download"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_10_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/download" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="下载"
                android:textColor="@color/colorRed"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/divider_color"
            android:layout_width="0.1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical" />


        <LinearLayout
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_10_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <ImageView
                android:id="@+id/upload_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/upload_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="上传"
                android:textColor="@color/colorBlue"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/divider_color"
            android:layout_width="0.1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/plan_farm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_10_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/firm_plan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="规划"
                android:textColor="@color/colorGreen"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/divider_color"
            android:layout_width="0.1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/change_farm_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_10_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/firm" />

            <TextView
                android:id="@+id/firm_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/shack_farm"
                android:textColor="@color/colorGrey"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:background="@drawable/bg_homepage_firm">

        <com.example.kerne.potato.Util.PowerFullLayout
            android:id="@+id/scale_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/homepage_farm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_farm" />
        </com.example.kerne.potato.Util.PowerFullLayout>
    </RelativeLayout>
</LinearLayout>