<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
         
        <item name="colorPrimary">@color/secondary_text</item>
        <item name="colorPrimaryDark">@color/secondary_text</item>
        <item name="colorAccent">@color/colorBlue</item> 
    </style>

    <!-- 无边框loding -->
    <style name="dialogstyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TextView_Table_Right">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textColorHint">@color/actionsheet_gray</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextView_Table_Right_title">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="listviewstyle">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@color/line_color</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="style_item_basicinfo_textview">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="style_item_basicinfo_edittext">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="view_divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/line_grey</item>
    </style>

    <style name="view_vertical_devider_style">
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_devider</item>
    </style>


    //indicator的style

    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:dividerPadding">8dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@drawable/selector_tabtext</item>
    </style>

    //图片dialog全屏显示

    <style name="Dialog_Fullscreen">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    //dialog动画

    <style name="dialogWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_anmi</item>
        <item name="android:windowExitAnimation">@anim/dialog_anmi_exit</item>
    </style>

    //edittext dialog样式（自动显示软键盘）

    <style name="inputDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item><!--显示软件盘-->
    </style>

    //item_basic_info页面style

    <style name="style_basic_spinner1">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:elevation">2dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="style_basic_spinner2">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:elevation">2dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="style_basic_info_image">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/bg_basic_info_btn</item>
        <item name="android:elevation">2dp</item>
    </style>

    //item_basic_info页面拍照style

    <style name="style_basic_camera_btn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:background">@drawable/bg_basic_info_btn</item>
        <item name="android:elevation">2dp</item>
    </style>

    //item_basic_info页面相册style

    <style name="style_basic_album_btn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:background">@drawable/bg_basic_info_btn</item>
    </style>


</resources>
